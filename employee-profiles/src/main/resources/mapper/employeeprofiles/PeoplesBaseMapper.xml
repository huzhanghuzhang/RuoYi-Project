<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.document.employeeprofiles.mapper.PeoplesBaseMapper">
    
    <resultMap type="PeoplesBase" id="PeoplesBaseResult">
        <result property="peopleId"    column="people_id"    />
        <result property="peopleName"    column="people_name"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectPeoplesBaseVo">
        select people_id, people_name, create_by, create_time, update_by, update_time from peoples_base
    </sql>

    <select id="selectPeoplesBaseList" parameterType="PeoplesBase" resultMap="PeoplesBaseResult">
        <include refid="selectPeoplesBaseVo"/>
        <where>  
            <if test="peopleName != null  and peopleName != ''"> and people_name like concat('%', #{peopleName}, '%')</if>
        </where>
    </select>
    
    <select id="selectPeoplesBaseByPeopleId" parameterType="Integer" resultMap="PeoplesBaseResult">
        <include refid="selectPeoplesBaseVo"/>
        where people_id = #{peopleId}
    </select>

    <insert id="insertPeoplesBase" parameterType="PeoplesBase" useGeneratedKeys="true" keyProperty="peopleId">
        insert into peoples_base
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="peopleName != null and peopleName != ''">people_name,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="peopleName != null and peopleName != ''">#{peopleName},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updatePeoplesBase" parameterType="PeoplesBase">
        update peoples_base
        <trim prefix="SET" suffixOverrides=",">
            <if test="peopleName != null and peopleName != ''">people_name = #{peopleName},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where people_id = #{peopleId}
    </update>

    <delete id="deletePeoplesBaseByPeopleId" parameterType="Integer">
        delete from peoples_base where people_id = #{peopleId}
    </delete>

    <delete id="deletePeoplesBaseByPeopleIds" parameterType="String">
        delete from peoples_base where people_id in 
        <foreach item="peopleId" collection="array" open="(" separator="," close=")">
            #{peopleId}
        </foreach>
    </delete>
</mapper>